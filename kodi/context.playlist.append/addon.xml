<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="context.playlist.append" name="Playlist Append" version="0.0.3" provider-name="curti">
    <requires>
        <import addon="xbmc.python" version="2.20.0" />
    </requires>
    <extension point="kodi.context.item" library="addon.py">
        <item>
            <label>Add to playlist</label>
            <visible>Container.Content(episodes) | Container.Content(movies) | Container.Content(songs) | Container.Content(musicvideos)</visible>
        </item>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Add media to a playlist.</summary>
        <description lang="en">Add media to an existing basic playlist.</description>
        <platform>all</platform>
        <license>GNU General Public License, v2</license>
        <email></email>
    </extension>
</addon>